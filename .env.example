# Copy to .env and load with your shell/direnv. Defaults match src/config.js.

# Server
HOST=0.0.0.0
PORT=3000

# Circle policy & federation
# ENFORCE_CIRCLE: true to require verified people for gated actions.
ENFORCE_CIRCLE=false
CIRCLE_POLICY_ID=party-circle-alpha
CIRCLE_ISSUER=local-circle
GOSSIP_INTERVAL_SECONDS=300

# Signing (PEM contents; leave blank to skip signing)
CIRCLE_PRIVATE_KEY=
CIRCLE_PUBLIC_KEY=

# Extensions (comma-separated module names under src/modules/extensions/)
CIRCLE_EXTENSIONS=

# Topic gardener helper (optional)
TOPIC_GARDENER_SYNC_SECONDS=120
TOPIC_GARDENER_URL=
# CIRCLE_TOPIC_GARDENER_URL=  # Alias for TOPIC_GARDENER_URL
TOPIC_GARDENER_ANCHORS=general,governance,economy,society,technology
TOPIC_GARDENER_PINNED=

# Persistence / data mode
# DATA_MODE: centralized | hybrid | p2p
DATA_MODE=centralized
# DATA_ADAPTER: json | memory | sql | kv | mysql | mongodb
DATA_ADAPTER=json
# DATA_VALIDATION_LEVEL: strict | observe | off
DATA_VALIDATION_LEVEL=strict
# DATA_PREVIEW: true | false
DATA_PREVIEW=false
# SQL adapter (optional)
DATA_SQLITE_URL=
DATA_SQLITE_FILE=
# KV adapter (optional)
DATA_KV_FILE=
# MySQL adapter (optional)
DATA_MYSQL_URL=
DATA_MYSQL_HOST=
DATA_MYSQL_PORT=
DATA_MYSQL_USER=
DATA_MYSQL_PASSWORD=
DATA_MYSQL_DATABASE=
DATA_MYSQL_TABLE=state_entries
# MongoDB adapter (optional)
DATA_MONGO_URL=
DATA_MONGO_DB=
DATA_MONGO_COLLECTION=state_entries

# Social/media
SOCIAL_MEDIA_MAX_BYTES=10485760
SOCIAL_MEDIA_REPORT_THRESHOLD=3

# Outbound delivery (optional). OUTBOUND_WEBHOOK_HEADERS expects JSON.
OUTBOUND_EMAIL_WEBHOOK=
OUTBOUND_SMS_WEBHOOK=
OUTBOUND_WEBHOOK_HEADERS=
OUTBOUND_TRANSPORT_MODULE=

# Ops metrics snapshots (persisted in settings.json)
METRICS_SNAPSHOT_INTERVAL_SECONDS=300
METRICS_SNAPSHOT_RETENTION_HOURS=24

# Standalone helper script (run-standalone.sh)
ADMIN_USER=admin
ADMIN_PASSWORD=admin
ADMIN_SESSION_ID=admin
STANDALONE_DIR=./.local/standalone
STANDALONE_KV_FILE=./.local/standalone/kv-store.json
STANDALONE_KEY_DIR=./.local/standalone/keys
STANDALONE_PRIVATE_KEY=./.local/standalone/keys/circle-private.pem
STANDALONE_PUBLIC_KEY=./.local/standalone/keys/circle-public.pem
